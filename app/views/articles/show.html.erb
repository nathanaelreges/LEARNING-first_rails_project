<h1>Showing post: <%= @article.id %> </h1>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<h3> 
  <%= link_to 'Back', articles_path %>
  <%= link_to 'Edit', action: 'edit'%>
  <%= link_to 'Delete', article_path(@article), 
    method: :delete, 
    data: {confirm: "Are you shure?"}
  %>
</h3>

<hr/>



<%= render 'comments/form'%>
 

 <h3> Comments: </h3>
<%= render @article.comments %>

