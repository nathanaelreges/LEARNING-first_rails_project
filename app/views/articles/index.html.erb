<h1>All the articles:</h1>
<h5> <%= link_to 'Create an Article', action: 'new'%> </h3>

<ul>
  <% @articles.each do |article| %>
    <li>
      <p>
        <strong>Title:</strong>
        <%= article.title %>
      </p>
      <p>
        <strong>Text:</strong>
        <%= article.text %>
      </p>

      <%= link_to 'Show', article_path(article) %> 
      <%= link_to 'Edit', edit_article_path(article) %>
    </li>
  <% end %>
</ul>


